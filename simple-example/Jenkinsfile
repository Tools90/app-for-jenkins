pipeline {
  agent any
  options {
    skipStagesAfterUnstable()
  }
  environment {
    IMAGE_BASE = 'simple-example'
    IMAGE_TAG = "v77"
    IMAGE_NAME = "${env.IMAGE_BASE}:${env.IMAGE_TAG}"
    IMAGE_NAME_LATEST = "${env.IMAGE_BASE}:latest"
    DOCKERFILE_NAME = "Dockerfile"
	APP_DIR = 'simple-example'
	DOCKERHUB_CREDENTIALS=credentials('docker_registry_dh')
  }
  
	tools {
			maven 'maven382'
	}
  stages {
    stage("Prepare container") {

      stages {
	  
	  	stage ('Initialize') {
			steps {
				sh '''
					echo "PATH = ${PATH}"
					echo "M2_HOME = ${M2_HOME}"
				'''
			}
		}
	  
        stage('Build') {
          steps {
            sh "mvn -f ${APP_DIR}/pom.xml clean install"
          }
        }

		stage('Push images') {
			steps {

				script {
				  sh '''cd ${APP_DIR}
				  ls'''
				  
				  sh 'docker build -t tools90/simple-example:v001 .'
				  sh 'docker push tools90/simple-example:v001'
				}
			}
		}



		stage('Deploy to K8s') {
		  steps {
			withKubeConfig([credentialsId: 'k8s-token', serverUrl: 'https://192.168.1.4:32769']) {
			  sh './kubectl apply -f simple-example.yaml'
			}
		  } 
		}


      }
    }


  }
}
